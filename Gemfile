# If you have OpenSSL installed, we recommend updating
# the following line to use "https"
source 'http://rubygems.org'

gem "middleman", "~>3.3.5"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# For faster file watcher updates on Windows:
gem "wdm", "~> 0.1.0", :platforms => [:mswin, :mingw]

# Windows does not come with time zone data
gem "tzinfo-data", platforms: [:mswin, :mingw]

# Add simple navigation helpers to middleman static site generator
# gem "middleman-navigation"

# Thumbnailer for middleman
# gem 'middleman-thumbnailer', :git => 'https://github.com/nhemsley/middleman-thumbnailer.git'

# Middleman extension that allows you to create image thumbnails by providing
# resize_to option to image_tag helper
gem 'middleman-simple-thumbnailer', :path => 'lib/middleman-simple-thumbnailer'

# A HTML whitespace minifier for Middleman
gem 'middleman-minify-html'

# Deploy a middleman built site over rsync, ftp, stfp, or git (e.g. gh-pages on github).
gem 'middleman-deploy', '~> 0.3.0'

# Dotenv for Middleman
gem 'middleman-dotenv', '~> 1.0'

# Small images are small! Compress yours during middleman build.
gem "middleman-imageoptim"

# The safe Markdown parser, reloaded.
# gem "redcarpet"
